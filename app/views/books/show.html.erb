<div class = "container px-5 px-sm-0">
  <div class = "row">
    <div class = "col-md-4">
      <%= render 'books/list', book: @book %>
      </div>
    <div class = "col-md-8 ">
      <h2>Book detail</h2>
        <table class = "table">
          <tbody>
            <tr>
              <td><%= link_to image_tag @book.user.get_profile_image(100,100) %><br>
                  <%= link_to current_user.name, user_path(current_user.id) %></td>
              <td><%= link_to @book.title, book_path %></td>
              <td><%= @book.body %></td>
              <% if @book.user == current_user %>
              <td><%= link_to "Edit", edit_book_path(@book), class: "btn btn-success btn-sm" %></td>
              <td><%= link_to "Destroy", book_path(@book), method: :delete, class: "btn btn-danger btn-sm" %></td>
              <% end %>
            </tr>
          </tbody>
  </div>
</div>
      <h2>User info</h2>
        <%= image_tag current_user.get_profile_image(100,100) %>
        <table class = "table">
          <tr>
            <th>name</th>
            <th><%= current_user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= current_user.introduction %></th>
          </tr>
          </table>
            
            <p><%= link_to "プロフィール編集", edit_user_path(current_user.id) %></p>
            
        <h2 class = "mt-3">New book</h2>
        <%= form_with model: book do |f| %>
          <div class = "field">
           <h4>Titel</h4>
             <%= f.text_field :title %>
         </div>
         <div class = "field">
           <h4>Opinion</h4>
             <%= f.text_area :body %>
         </div>
         <div class = "field">
             <%= f.submit 'Create Book' %>
             <% end %>
         </div>
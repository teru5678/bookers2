<div class = "container">
  <div class = "row">
    <div class="col-md-8 mt-3 mx-auto">
      <h1>Editing Book</h1>
      <%= form_with model: @book do |f| %>
      <div class = "field">
        <label for = "book_title">Title</label>
        <%= f.text_field :title, class: "form-control col-md-8" %>
      </div>
      <div class = "field">
        <label for = "book_title">Opinion</label>
        <%= f.text_area :body, class: "form-control col-md-8 " %>
      </div>
      <div class = "field">
        <%= f.submit 'Update Book', class: "btn btn-success" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
<div class = "container px-5 px-sm-0">
  <div class = "row">
    <div class = "col-md-4">
      <%= render 'books/list', book: @book %>
    </div>
      <div class = "col-md-8 ">
        <h2>Users</h2>
          <table class = "table-hover table-inverse">
            <thead>
              <tr>
                <th></th>
                <th>Titel</th>
                <th>Opinion</th>
              </tr>
            </thead>
            <% @books.each do |book| %>
            <tbody>
              <tr>
                <td><%= link_to image_tag book.user.get_profile_image(100,100) %></td>
                <td><%= link_to book.title,book_path(book.id) %></td>
                <td><%= book.body %></td>
              </tr>
            </tbody>
            <% end %>
          </table>
      </div>
  </div>
</div>
<div class = "container">
   <div class = "row">
     <div class = "col-md-8 mt-3 mx-auto">
       <h2>User info</h2>
         <% if @user.errors.any? %>
           <%= @user.errors.count %>件のエラーが発生しました
             <ul>
               <% @user.errors.full_messages.each do |message| %>
                 <li><%= message %></li>
               <% end %>
             </ul>
         <% end %>
         <%= form_with model: @user do |f| %>
           <div class = "field">
             <label for = "inputName">Name</label>
             <%= f.text_field :name,autofocus: true,id: "inputName",placeholder: "名前", class: "form-control col-md-8" %>
           </div>
           <div class = "field">
             <label for = "inputImage">Image</label>
               <%= f.file_field :profile_image,placeholder: "プロフィール画像", accept: "image/*" %>
           </div>
           <div class = "field">
             <label for = "inputintroduction">Introduction</label>
               <%= f.text_area :introduction, class: "form-control col-md-8" %>
           </div>
           <div class = "field">
             <%= f.submit "Update User", class: "btn btn-secondary" %>
           </div>
         <% end %>
     </div>
   </div>
</div>